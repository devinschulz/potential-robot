.container
  %article.post
    %h1= current_article.title
    %p.post__meta
      %time{datetime: current_article.date.strftime(@date_format_extended)}= current_article.date.strftime(@date_format)
      - if current_article.tags.present?
        %ul
          - current_article.tags.each do |tag|
            %li= link_to(tag, tag_path(tag))

    .post__content
      = content

  - if similar_articles.present?
    %section.related
      %h2 Related Articles
      %ul
        - similar_articles.first(2).each do |article|
          %li
            %h3= link_to article.title, article.url
            = summary(article)

  - prev_article = current_article.previous_article
  - next_article = current_article.next_article

  - if prev_article
    = link_to prev_article.title, prev_article.url, rel: "prev", title: "Previous article: #{prev_article.title}"
  - if next_article
    = link_to next_article.title, next_article.url, rel: "next", title: "Next article: #{next_article.title}"

  %section.share
    %h4 Share this post
    %ul
      %li
        %a.twitter{href: twitter_url, onclick: "window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"}
          %span.hidden Twitter
      %li
        %a.facebook{href: facebook_url, onclick: "window.open(this.href, 'facebook-share','width=580,height=296');return false;"}
          %span.hidden Facebook
      %li
        %a.google-plus{href: google_plus_url, onclick: "window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"}
          %span.hidden Google+